        <div class="sidebar-content">

            <nav class="nav-section">
                <a href="#about" class="nav-link active" @onclick="@(() => ScrollToSection("about"))">
                    <span class="nav-indicator"></span>
                    <span class="nav-text">ABOUT</span>
                </a>
                <a href="#experience" class="nav-link" @onclick="@(() => ScrollToSection("experience"))">
                    <span class="nav-indicator"></span>
                    <span class="nav-text">EXPERIENCE</span>
                </a>
                <a href="#projects" class="nav-link" @onclick="@(() => ScrollToSection("projects"))">
                    <span class="nav-indicator"></span>
